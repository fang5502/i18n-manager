{
  "name": "i18n-manager",
  "version": "1.8.2",
  "main": "build/main/index.js",
  "license": "MIT",
  "description": "The app that will help to manage your app translations",
  "author": {
    "email": "gilmarsquinelato@gmail.com",
    "name": "Gilmar Quinelato",
    "url": "https://www.github.com/gilmarsquinelato"
  },
  "module": "commonjs",
  "scripts": {
    "start": "npm run clean && concurrently \"npm run start:web\" \"npm run watch:main\" \"wait-on http-get://localhost:4200/ && npm run start:main\"",
    "build": "npm run build:all && electron-builder -wml",
    "start:web": "ng serve",
    "build:web": "ng build --optimization --vendor-chunk --extract-css --prod --output-path build/view",
    "start:main": "electron --inspect=9229 --remote-debugging-port=9222 .",
    "build:main": "tsc --outDir ./build -d -p ./main",
    "watch:main": "tsc --outDir ./build -w -p ./main",
    "build:all": "npm run clean && concurrently \"npm run build:main\" \"npm run build:web\"",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf build dist",
    "test": "npm run test:ci:main && npm run test:ci:web && npm run test:merge-coverage && npm run test:send-coverage",
    "test:ci:main": "jest --ci --coverage --maxWorkers=2",
    "test:ci:web": "ng test --karma-config ./src/karma.ci.conf.js --code-coverage",
    "test:merge-coverage": "cat ./coverage*/lcov.info > ./coverage.info",
    "test:send-coverage": "cat ./coverage.info | codacy-coverage --language typescript",
    "test:watch:main": "jest --watch",
    "test:watch:web": "ng test"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.8",
    "@angular/cli": "^7.3.8",
    "@angular/compiler-cli": "^7.2.13",
    "@angular/language-service": "^7.2.13",
    "@sentry/cli": "^1.41.1",
    "@types/electron-is-dev": "^1.1.1",
    "@types/jasmine": "~3.3.12",
    "@types/jasminewd2": "~2.0.6",
    "@types/jest": "^24.0.11",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.123",
    "@types/node": "~11.13.5",
    "@types/semver": "^6.0.0",
    "codacy-coverage": "^3.4.0",
    "codelyzer": "^5.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "electron-download": "^4.1.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.7.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.5",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "3.1.6",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "@angular/animations": "^7.2.13",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "^7.2.13",
    "@angular/compiler": "^7.2.13",
    "@angular/core": "^7.2.13",
    "@angular/forms": "^7.2.13",
    "@angular/http": "^7.2.13",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "^7.2.13",
    "@angular/platform-browser-dynamic": "^7.2.13",
    "@angular/router": "^7.2.13",
    "@sentry/electron": "^0.17.1",
    "@types/electron": "^1.6.10",
    "core-js": "^3.0.1",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.0.6",
    "hammerjs": "^2.0.8",
    "history": "^4.9.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.11",
    "rxjs": "^6.4.0",
    "zone.js": "^0.9.0"
  },
  "build": {
    "productName": "i18n Manager",
    "appId": "com.i18n-manager.app",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "icons/**/*",
      "package.json"
    ],
    "icon": "./icons/icon.png",
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Folder",
            "CFBundleTypeOSTypes": [
              "fold"
            ],
            "CFBundleTypeRole": "Editor",
            "LSIsAppleDefaultForType": true
          }
        ]
      }
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Development"
    },
    "win": {
      "publish": [
        "github"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "projects": [
      "./main",
      "./common"
    ],
    "coverageDirectory": "coverage-jest",
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js}",
      "!**/src/*",
      "!**/*.d.ts",
      "!**/assets/*",
      "!**/jest.setup.ts",
      "!**/jest.config.js"
    ]
  }
}
